            "apiVersion": "2018-12-01",
            "name": "[variables('RT-rda-name')]",
            "location": "[parameters('location')]",
            "tags": {
                "Project": "GRS"
            },
            "properties": {
                "disableBgpRoutePropagation": true,
                "routes": [
                    {
                        "name": "Inside-VNET",
                        "properties": {
                            "addressPrefix": "[parameters('vnetAddressPrefix')]",
                            "nextHopType": "VnetLocal"
                        }
                    },
                    {
                        "name": "To-OnPrem",
